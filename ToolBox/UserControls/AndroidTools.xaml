<UserControl x:Class="ToolBox.UserControls.AndroidTools"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBox.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="612" d:DesignWidth="1002">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="230"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Name="TabControl">
            <TabItem Header="Commands">
                <UserControl Name="CommandsTabUserControl"/>
            </TabItem>

            <TabItem Header="Install APKs">
                <UserControl Name="ApkTabControl"/>
            </TabItem>
        </TabControl>

        <UserControl Grid.Row="1" Name="OutputTextBoxControl"/>
    </Grid>
</UserControl>
